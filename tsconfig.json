{
  "compilerOptions": {
    "jsx": "react", // Способ компиляции JSX
    "allowJs": true, // Позволять использовать JavaScript в TypeScript файлах
    "declaration": true, // Создавать исходный файл при компиляции
    "target": "ES6", // Версия ECMAScript, которую вы хотите использовать
    "module": "CommonJS", // Тип модулей (например, commonjs, esnext)
    "outDir": "./dist/", // Папка, куда компилировать TypeScript файлы
    "rootDir": "./src/", // Папка, в которой вы находитесь
    "removeComments": true, // Удалять комментарии
    "strict": true, // Усиленная типизация
    // "lib": ["dom"], // Подключаемые библиотеки ES6 для компиляции
    "sourceMap": true, // Создавать source map
    "esModuleInterop": true, // Взаимодействие с модулями ES6
    "isolatedModules": true, // Использовать один модуль вместо нескольких
    "skipLibCheck": true, // Пропустить проверку объявлений
    "forceConsistentCasingInFileNames": true // Проверка на согласованность регистра в именах файлов
    // "noImplicitAny": false // Позволить неявное приведение типов
  },
  "include": ["./src/**/*"], // Папки, в которых находятся ваши TypeScript файлы
  "exclude": [
    "node_modules",
    "./src/components/hooks",
    "__tests__",
    "*.test.tsx",
    "*.test.ts",
    "dist"
  ] // Папки, которые не будут скомпилированы
}
